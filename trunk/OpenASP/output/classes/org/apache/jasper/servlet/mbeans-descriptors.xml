<mbeans-descriptors>

  <mbean         name="AspMonitor"
          description="JSP Monitoring"
               domain="Catalina"
                group="Monitoring"
                 type="org.apache.jasper.servlet.AspServlet">

    <attribute   name="aspCount"
          description="The number of JSPs that have been loaded into a webapp"
                 type="int"
                 writeable="false"/>

    <attribute   name="aspReloadCount"
          description="The number of JSPs that have been reloaded"
                 type="int"/>

    <attribute   name="aspUnloadCount"
          description="The number of JSPs that have been unloaded"
                 type="int"/>

    <attribute   name="aspQueueLength"
          description="The length of the JSP queue (if enabled via maxLoadedAsps)"
                 type="int"/>

  </mbean>

</mbeans-descriptors>
